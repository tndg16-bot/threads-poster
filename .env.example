# Threads API Configuration
# Copy this file to .env and fill in your values

# Facebook App Configuration
THREADS_APP_ID=your_app_id_here
THREADS_APP_SECRET=your_app_secret_here

# Threads Access Token (Long-lived)
# Get this from: https://developers.facebook.com/tools/explorer/
THREADS_ACCESS_TOKEN=your_access_token_here

# OAuth Redirect URI
THREADS_REDIRECT_URI=https://localhost:3000/callback

# API Version (optional, default: v1.0)
THREADS_API_VERSION=v1.0

# Dry Run Mode (set to 'true' to test without posting)
THREADS_DRY_RUN=false

# Log Level (debug, info, warn, error)
THREADS_LOG_LEVEL=info
